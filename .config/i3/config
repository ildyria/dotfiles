# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $alt+Shift+r restart
# Shutdown, Reboot, Lock Screen, and Logout
#1990B7
set $sysmenu "system:   [R]eload i3    [P]oweroff    re[B]oot    [L]ock    logou[T]"
# bindsym $win+Shift+Return      mode $sysmenu
bindsym $alt+Shift+F4          mode $sysmenu
mode $sysmenu {
    bindsym p         exec /sbin/shutdown -P now
    bindsym b         exec /sbin/shutdown -r now
    bindsym l         exec i3lock -c 000000, mode "default"
    bindsym r         restart, mode "default"
    bindsym t         exec --no-startup-id i3-msg exit, mode "default"
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

set $keyboardmenu "select keyboard layout:   [F]rench    [U]S"
bindsym $win+k      mode $keyboardmenu
mode $keyboardmenu {
    bindsym f         exec setxkbmap fr, mode "default"
    bindsym u         exec setxkbmap us, mode "default"
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

